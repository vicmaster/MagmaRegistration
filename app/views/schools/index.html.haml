%h1 Lista de Escuelas
%table{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.school.name", :default => t("activerecord.labels.name", :default => "Name"))
      %th Created at
      %th Actions
  %tbody
    - @schools.each do |school|
      %tr
        %td= school.id
        %td= link_to school.name, school_path(school)
        %td= school.created_at
        %td
          = link_to "Show", school_path(school)
          = link_to "Edit", edit_school_path(school)
          = link_to "Destroy", school_path(school), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

= link_to "New", new_school_path, :class => 'btn btn-primary'
