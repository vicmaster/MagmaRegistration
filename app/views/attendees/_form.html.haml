.left.span4
  .clearfix
    %h2 Nombre completo
    .input
      = f.text_field :name, class: 'text_field span3'
  .clearfix
    %h2 Correo
    .input
      = f.text_field :email, class: 'text_field span3'
  .clearfix
    %h2 Twitter
    .input
      = f.text_field :twitter, class: 'text_field span3'
  .clearfix
    %h2 Lugar donde nos visita?
    .input
      = f.text_field :place, class: 'text_field span3'
  .clearfix
    %h2 Empresa
    .input
      = f.text_field :enterprise, class: 'text_field span3'
  .clearfix
    %h2 RFC
    .input
      = f.text_field :rfc, class: 'text_field span3'
  .clearfix
    %h2 Fecha de Nacimiento
    .input.date
      = f.date_select :birth_date, :order => [:day, :month, :year], :start_year => 1960, :end_year => 2003, :default => { :year => 1990 }

.right.span4
  .clearfix
    %h2 CURP
    .input
      = f.text_field :curp, class: 'text_field span3'
  .clearfix
    %h2 Genero
    .input
      = f.select :gender, options_for_select(['Masculino', 'Femenino'])
  .clearfix
    %h2 Carrera
    .input
      = f.text_field :carrier, class: 'text_field span3'
  .clearfix
    %h2 Semestre
    .input
      = f.number_field :current_semester, class: 'text_field span3'
  .clearfix
    %h2 Cuenta
    .input
      = f.text_field :account_number, class: 'text_field span3'
  .clearfix
    %h2 Sistema operativo
    .input
      = f.select :system_id, options_from_collection_for_select(@systems, "id", "name")
  .clearfix
    %h2 Medida de playera
    .input
      = f.select :size_id, options_from_collection_for_select(@sizes, "id", "name")

  .clearfix
    .controls
      %button{:class => "btn primary btn-large", :type => "submit"} Save
      or
      = link_to "Cancel", attendees_path
